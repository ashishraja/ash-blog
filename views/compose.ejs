<%- include("partials/header") -%>
 <div style="min-height:74.2vh;">
  <h1>New Article</h1>
  <form style="padding-top:20px;" action="/compose" method="post">
    <div class="form-group">
      <label for="">Title</label><br>
      <input required class="form-control" type="text" name="postTitle" value=""><br>
      <label for="">Description</label><br>
      <textarea required class="form-control" name="postBody" rows="3" cols="80"></textarea><br>
      <label for="">Markdown</label><br>
      <textarea required class="form-control" name="postMarkdown" rows="5" cols="80"></textarea><br>
      <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </div>
  </form>
 </div>

<%- include("partials/footer") -%>
